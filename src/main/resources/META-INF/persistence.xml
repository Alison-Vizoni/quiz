<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.1" xmlns="http://xmlns.jcp.org/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_1.xsd">
  <persistence-unit name="quizPU" transaction-type="RESOURCE_LOCAL">
    <provider>org.hibernate.ejb.HibernatePersistence</provider>
    <class>br.com.quiz.model.entidade.Pergunta</class>
    <class>br.com.quiz.model.entidade.Categoria</class>
    <class>br.com.quiz.model.entidade.Login</class>
    <class>br.com.quiz.model.entidade.Usuario</class>
    <class>br.com.quiz.model.entidade.AplicacaoQuizResultado</class>
    <class>br.com.quiz.model.entidade.Alternativa</class>
    <class>br.com.quiz.model.entidade.Quiz</class>
    <class>br.com.quiz.model.entidade.AplicacaoQuiz</class>
    <class>br.com.quiz.model.entidade.SubCategoria</class>
    <properties>
      <property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/quiz?useTimezone=true&amp;serverTimezone=America/Sao_Paulo&amp;zeroDateTimeBehavior=convertToNull"/>
      <property name="javax.persistence.jdbc.user" value="root"/>
      <property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
      <property name="javax.persistence.jdbc.password" value="admin"/>
      <property name="hibernate.cache.provider_class" value="org.hibernate.cache.NoCacheProvider"/>
      <property name="hibernate.hbm2ddl.auto" value="create"/>
    </properties>
  </persistence-unit>
</persistence>
